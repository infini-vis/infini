{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*", "./global.d.ts"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts", "src/**/*.test.ts"]
}
